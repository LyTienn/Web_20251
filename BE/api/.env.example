PORT=5000

# Cách 1: Dùng chuỗi kết nối trực tiếp
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Cách 2: Khai báo riêng lẻ để tự tạo DB nếu chưa có
DB_NAME=CNWEB
DB_USER=username
DB_PASS=password
DB_HOST=localhost
DB_PORT=5432
DB_SYNC=alter  # alter | force | none

# JWT Secrets - Generate your own using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here-must-be-different

# Token Expiration
ACCESS_TOKEN_EXPIRE=15m
REFRESH_TOKEN_EXPIRE=7d

# Environment
NODE_ENV=development